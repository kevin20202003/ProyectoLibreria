@model ProyectoLibreria.Models.Entidades.Categoria
@{
    ViewData["Title"] = "Crear Categoria";
    Layout = null;
}

<div class=" col-md-12">
    <div class=" card">
        <div class=" card-header text-center">
            <h5> Crear Categoria</h5>
        </div>
        <div class=" card-body text-center">
            <form asp-action="Crear">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label></label>
                    <input asp-for="categoria" class="form-control" placeholder=" Nombre Categoria" />
                    <span asp-validation-for="categoria" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label></label>
                    <input asp-for="descripcion" class="form-control" placeholder=" Descripcion" />
                    <span asp-validation-for="descripcion" class="text-danger"></span>
                </div>
                <div class=" card-footer ">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Guardar</button>
                        <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="fa fa-ban"></i> Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

