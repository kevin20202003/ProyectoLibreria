@model ProyectoLibreria.Models.Entidades.Editorial
@{
    ViewData["Title"] = "Editar";
    Layout = null;
}

<div class=" col-md-12">

    <div class=" card">

        <div class=" card-header text-center">

            <h5> Editar Editorial</h5>

        </div>

        <div class=" card-body text-center">

            <form asp-action="Editar">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="id_editorial" />

                <div class="form-group">

                    <label></label>

                    <input asp-for="nombre" class="form-control" placeholder=" Nombre" />

                    <span asp-validation-for="nombre" class="text-danger"></span>

                </div>

                <div class=" card-footer ">

                    <div class="form-group">

                        <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Guardar</button>

                        <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="fa fa-ban"></i> Cancelar</button>

                    </div>

                </div>

            </form>

        </div>

    </div>

</div>










